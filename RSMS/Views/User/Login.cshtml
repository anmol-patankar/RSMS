@model RSMS.ViewModels.UserLoginModel

<link rel="stylesheet" href="~/css/login.css" />

<div class="container d-flex justify-content-center align-items-center">
    <div class="card">
        <div class="card-header bg-primary">
            <h2 class="mb-0 text-white text-center">Login</h2>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <label asp-for="Username">Username</label>
                    <input asp-for="Username" class="form-control form-control-sm" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" class="form-control form-control-sm" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-block">Login</button>
            </form>
        </div>
    </div>
</div>

@if (ViewBag.Message != null)
{
    <script>
        window.onload = function () {
            alert("@ViewBag.Message");
        };
    </script>
}